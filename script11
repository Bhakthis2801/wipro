#!/bin/bash

# Function to send email
send_email() {
    local recipient="$1"
    local subject="$2"
    local message="$3"

    # Sending email using the 'mail' command
    echo "$message" | mail -s "$subject" "$recipient"

    # Check if mail command executed successfully
    if [ $? -eq 0 ]; then
        echo "Email sent successfully to $recipient"
    else
        echo "Failed to send email to $recipient"
    fi
}

# Main script
echo "Welcome to Email Notification Script!"

# Input recipient email addresses
read -p "Enter recipient email address: " recipient_email

# Input email subject
read -p "Enter email subject: " email_subject

# Input email message
read -p "Enter email message: " email_message

# Send email
send_email "$recipient_email" "$email_subject" "$email_message"

